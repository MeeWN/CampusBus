<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="380dp"
            android:layout_height="77dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-10dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kmutt7_0136"
            card_view:layout_editor_absoluteX="2dp" />

        <TextView
            android:id="@+id/textFrom"
            android:layout_width="365dp"
            android:layout_height="50dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="17dp"
            android:text="Kmutt Bangmod Campus"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <TextView
            android:id="@+id/textTo"
            android:layout_width="384dp"
            android:layout_height="47dp"
            android:layout_marginTop="71dp"
            android:text="Kmutt Bangkhuntien Campus"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textFrom"
            android:layout_marginLeft="65dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="44dp"
            android:text="Bus :"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <TextView
            android:id="@+id/textBus"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="44dp"
            android:text="B2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="44dp"
            android:text="Seat:"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <TextView
            android:id="@+id/textSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="44dp"
            android:text="22"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="44dp"
            android:text="Depart:"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="44dp"
            android:text="16:30"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="87dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="dismiss"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <Button
            android:id="@+id/button4"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="85dp"
            android:layout_marginTop="87dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Cancel "
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTo" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="39dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/pin"
            card_view:layout_editor_absoluteX="16dp"
            card_view:layout_editor_absoluteY="94dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="41dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/grayplaceholder"
            card_view:layout_editor_absoluteX="16dp"
            card_view:layout_editor_absoluteY="215dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
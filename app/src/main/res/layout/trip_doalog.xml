<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="380dp"
            android:layout_height="77dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-10dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kmutt7_0136"
            card_view:layout_editor_absoluteX="2dp" />

        <TextView
            android:id="@+id/dialog_from"
            android:layout_width="365dp"
            android:layout_height="50dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="16dp"
            android:text="Kmutt Bangmod Campus"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <TextView
            android:id="@+id/dialog_to"
            android:layout_width="384dp"
            android:layout_height="47dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="68dp"
            android:text="Kmutt Bangkhuntien Campus"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_from" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="44dp"
            android:text="Bus :"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to" />

        <TextView
            android:id="@+id/text_bus"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="44dp"
            android:text="B2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="44dp"
            android:text="Depart:"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="44dp"
            android:text="16:30"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to" />

        <Button
            android:id="@+id/button4"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="148dp"
            android:layout_marginTop="87dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Cancel "
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="38dp"
            android:layout_height="33dp"
            app:srcCompat="@android:drawable/arrow_down_float"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_from"
            android:layout_marginRight="173dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
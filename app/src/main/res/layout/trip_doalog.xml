<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="53dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/pin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="102dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="25dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="34dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.996"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cancelButton"
            app:layout_constraintRight_toLeftOf="@+id/text_time"
            android:layout_marginRight="94dp"
            android:layout_marginEnd="94dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="53dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/logoplace"
            android:layout_marginStart="25dp"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="380dp"
            android:layout_height="77dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kmutt7_0136" />

        <TextView
            android:id="@+id/dialog_from"
            android:layout_width="365dp"
            android:layout_height="50dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="33dp"
            android:text="Kmutt Bangmod Campus"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            android:layout_marginStart="88dp" />

        <TextView
            android:id="@+id/dialog_to"
            android:layout_width="384dp"
            android:layout_height="47dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="67dp"
            android:text="Kmutt Bangkhuntien"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_from"
            android:layout_marginStart="100dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus :"
            android:textSize="14sp"
            android:layout_marginLeft="58dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView16"
            android:layout_marginTop="16dp"
            android:layout_marginStart="58dp" />

        <TextView
            android:id="@+id/text_bus"
            android:layout_width="66dp"
            android:layout_height="42dp"
            android:text="B2"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/imageView16"
            android:layout_marginTop="33dp"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depart:"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cancelButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to"
            app:layout_constraintVertical_bias="0.314"
            android:layout_marginRight="102dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="102dp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="61dp"
            android:layout_height="31dp"
            android:text="16:30"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView27"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to"
            app:layout_constraintVertical_bias="0.625"
            app:layout_constraintBottom_toTopOf="@+id/cancelButton" />

        <Button
            android:id="@+id/cancelButton"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Cancel "
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_to"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>